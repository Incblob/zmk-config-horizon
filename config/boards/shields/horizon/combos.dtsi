#define MODTIME 25

#define COMBO_LAYER(NAME, BINDINGS, KEYPOS, ...) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <__VA_ARGS__>; \
    timeout-ms = <MODTIME>; \
};

#define ROLL_COMBO 200
#define COMBO_ROLL(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <ROLL_COMBO>; \
};


