#define COMBO_LAYER(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = LAYERS; \
    timeout-ms = <65>; \
};

#define COMBO_ROLL(NAME, BINDINGS, KEYPOS, LAYERS) \
